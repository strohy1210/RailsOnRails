
<div id="index" class="container">
  <div class="col-md-12">
<iframe width="1200px" height="770px" src="//www.youtube.com/embed/yRvJylbSg7o" frameborder="0" allowfullscreen></iframe>
</div>
<br>
<div class="col-md-6 col-md-offset-3">
<h2 class="loading text-center"><strong>Your results are loading...</strong></h2>
</div>
<br><br>
<div class="row centered">
  <div class="col-md-4 col-md-offset-4">

    <div class="search">
    <%= form_tag(search_path, method: 'get', class: "navbar-form", role: "search") do %>
     <h4>Enter your commute destination:</h4>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="e.g. 'The Flatiron School'" name="q">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="e.g. $1500" name="x">
        <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    <% end %>




<br>
    <div class="price">
    <%= form_tag(search_path, method: 'get', class: "navbar-form", role: "price") do %>
     <h4>How much are you willing to pay?</h4>
        <div class="input-group">
            <input type="text" class="form-control" placeholder="e.g. $1500" name="x">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
        </div>
    <% end %>
  </div>


  <br>
    <div class="time">
    <%= form_tag(search_path, method: 'get', class: "navbar-form", role: "time") do %>
     <h4>How long are you willing to travel?</h4>
        <div class="btn-group">
          <button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            Large button <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
           <li><a href="#">Fifteen minutes</a></li>
           <li><a href="#">Twenty minutes</a></li>
           <li><a href="#">Twenty-five minutes</a></li>
           <li><a href="#">Thirty minutes</a></li>
           <li><a href="#">Forty minutes</a></li>
           <li><a href="#">Forty-five minutes</a></li>
           <li><a href="#">One hour</a></li>
          </ul>
        </div>


<div class="btn-group">
  <button type="button" class="btn btn-default">Action</button>
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">Toggle Dropdown</span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><a href="#">Action</a></li>
    <li><a href="#">Another action</a></li>
    <li><a href="#">Something else here</a></li>
  </ul>
</div>



        </div>
    <% end %>
  </div>





  </div>


</div>
</div>
